
@{
    ViewBag.Title = "Forgot Password";
}

<h2>Forgot Password</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal ">
        <hr />
        <div class="text-success">
            @ViewBag.Message
        </div>
        <div class="form-group" style="padding-right:620px; color:white;">
            <label class="control-label col-md-2">Email-ID</label>
            @Html.TextBox("EmailID", "",new { @class="form-control"})
        </div>
        <div class="form-group" style="padding-right:650px;">
            <div class="col-md-offset-7 col-md-20 ">
                <input type="submit" value="Submit" class="btn btn-dark" />
            </div>
        </div>
    </div>
}

